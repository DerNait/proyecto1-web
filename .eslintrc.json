{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:storybook/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": [
      "error",
      "never"
    ]
  },
  "overrides": [
    {
      "files": [
        "**/*.test.{js,jsx}",
        "**/*.spec.{js,jsx}"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}